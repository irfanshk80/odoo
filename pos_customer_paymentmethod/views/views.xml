<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="pos_customer_paymentmethod_insurancevalue_formview">
      <field name="name">pos.customer.paymentmethod.insurancevalue</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="point_of_sale.view_partner_property_form" />
      <field name="arch" type="xml">
        <xpath expr="//group[@name='point_of_sale']" position="inside">
            <field name="insurance_value"/>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="pos_customer_paymentmethod_isinsurance_formview">
        <field name="name">pos.customer.paymentmethod_formview</field>
        <field name="model">pos.payment.method</field>
        <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='Payment methods']" position="inside">
                <div class="o_setting_left_pane">
                    <label for="is_insurance"/>
                    <field name="is_insurance" />
                </div>
            </xpath>
        </field>
    </record>


